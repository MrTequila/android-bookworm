<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    xmlns:android="http://schemas.android.com/apk/res/android">
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="mrtequila.bookworm.BookDetails"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="120dp"
        android:layout_height="156dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/book"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="16dp" />

    <EditText
        android:id="@+id/PagesNumberID"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:background="@null"
        android:clickable="false"
        android:cursorVisible="false"
        android:ems="10"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:inputType="none"
        android:selectAllOnFocus="false"
        android:text="Pages"
        app:layout_constraintLeft_toLeftOf="@+id/BookAuthorID"
        app:layout_constraintTop_toTopOf="@+id/editText10"
        tools:clickable="false"
        tools:focusable="false" />

    <EditText
        android:id="@+id/FinishDateID"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:background="@null"
        android:clickable="false"
        android:cursorVisible="false"
        android:ems="10"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:inputType="none"
        android:selectAllOnFocus="false"
        android:text="Finish Date"
        app:layout_constraintLeft_toLeftOf="@+id/StartDateID"
        app:layout_constraintTop_toTopOf="@+id/editText12"
        tools:clickable="false"
        tools:focusable="false" />

    <EditText
        android:id="@+id/StartDateID"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:background="@null"
        android:clickable="false"
        android:cursorVisible="false"
        android:ems="10"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:inputType="none"
        android:selectAllOnFocus="false"
        android:text="Start Date"
        app:layout_constraintLeft_toLeftOf="@+id/PagesNumberID"
        app:layout_constraintTop_toTopOf="@+id/editText11"
        tools:clickable="false"
        tools:focusable="false" />

    <EditText
        android:id="@+id/TimeReadID"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:background="@null"
        android:clickable="false"
        android:cursorVisible="false"
        android:ems="10"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:inputType="none"
        android:selectAllOnFocus="false"
        android:text="Time read"
        app:layout_constraintLeft_toLeftOf="@+id/FinishDateID"
        app:layout_constraintTop_toTopOf="@+id/editText7"
        tools:clickable="false"
        tools:focusable="false" />

    <EditText
        android:id="@+id/BookAuthorID"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:background="@null"
        android:editable="false"
        android:ems="10"
        android:inputType="none"
        android:selectAllOnFocus="false"
        android:text="Book Author"
        android:textAlignment="textStart"
        tools:clickable="false"
        tools:focusable="false"
        app:layout_constraintLeft_toRightOf="@+id/editText9"
        android:layout_marginLeft="24dp"
        app:layout_constraintTop_toTopOf="@+id/editText9"
        android:layout_marginTop="0dp" />

    <EditText
        android:id="@+id/BookTitleID"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:background="@null"
        android:clickable="false"
        android:cursorVisible="false"
        android:ems="10"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:inputType="none"
        android:selectAllOnFocus="false"
        android:text="Book Title"
        tools:clickable="false"
        tools:focusable="false"
        app:layout_constraintTop_toTopOf="@+id/editText8"
        android:layout_marginTop="0dp"
        app:layout_constraintLeft_toRightOf="@+id/editText8"
        android:layout_marginLeft="24dp" />

    <EditText
        android:id="@+id/editText7"
        android:layout_width="95dp"
        android:layout_height="40dp"
        android:layout_marginTop="8dp"
        android:background="@null"
        android:clickable="false"
        android:cursorVisible="false"
        android:ems="10"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:inputType="textPersonName"
        android:text="Time Read:"
        app:layout_constraintLeft_toLeftOf="@+id/editText12"
        app:layout_constraintTop_toBottomOf="@+id/editText12" />

    <EditText
        android:id="@+id/editText12"
        android:layout_width="70dp"
        android:layout_height="40dp"
        android:background="@null"
        android:clickable="false"
        android:cursorVisible="false"
        android:ems="10"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:inputType="textPersonName"
        android:text="Finished:"
        app:layout_constraintLeft_toLeftOf="@+id/editText11"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/editText11" />

    <EditText
        android:id="@+id/editText11"
        android:layout_width="70dp"
        android:layout_height="40dp"
        android:layout_marginTop="8dp"
        android:background="@null"
        android:clickable="false"
        android:cursorVisible="false"
        android:ems="10"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:inputType="textPersonName"
        android:text="Started:"
        app:layout_constraintLeft_toLeftOf="@+id/editText10"
        app:layout_constraintTop_toBottomOf="@+id/editText10" />

    <EditText
        android:id="@+id/editText10"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:background="@null"
        android:clickable="false"
        android:cursorVisible="false"
        android:ems="10"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:text="Pages:"
        android:layout_marginStart="16dp"

        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/editText9"
        app:layout_constraintLeft_toRightOf="@+id/imageView" />

    <EditText
        android:id="@+id/editText9"
        android:layout_width="70dp"
        android:layout_height="40dp"
        android:background="@null"
        android:clickable="false"
        android:cursorVisible="false"
        android:ems="10"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:inputType="none"
        android:text="Author:"
        android:textAlignment="viewStart"
        app:layout_constraintLeft_toLeftOf="@+id/editText8"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/BookTitleID" />

    <EditText
        android:id="@+id/editText8"
        android:layout_width="70dp"
        android:layout_height="40dp"
        android:layout_marginTop="16dp"
        android:background="@null"
        android:clickable="false"
        android:cursorVisible="false"
        android:ems="10"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:selectAllOnFocus="false"
        android:text="Title:"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/imageView"
        android:layout_marginStart="16dp"/>


</android.support.constraint.ConstraintLayout>
</ScrollView>